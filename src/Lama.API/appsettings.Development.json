{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "LamaDb": "Server=(localdb)\\mssqllocaldb;Database=LamaDb;Trusted_Connection=true;"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-change-in-production-min-32-chars-1234567890",
    "Issuer": "lama-api",
    "Audience": "lama-app",
    "ExpirationMinutes": 60
  },
  "OAuth": {
    "Google": {
      "ClientId": "your-google-client-id.apps.googleusercontent.com",
      "ClientSecret": "your-google-client-secret",
      "RedirectUri": "http://localhost:5000/api/v1/auth/oauth/google/callback"
    },
    "GitHub": {
      "ClientId": "your-github-client-id",
      "ClientSecret": "your-github-client-secret",
      "RedirectUri": "http://localhost:5000/api/v1/auth/oauth/github/callback"
    }
  }
}
